generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Lansia {
  id               Int      @id @default(autoincrement())
  nama             String
  nik              String   @unique
  tanggalLahir     DateTime
  umur             Int
  gds              Int
  beratBadan       Float
  tinggiBadan      Float
  lingkarPinggang  Float
  tekananDarah     String
  createdAt        DateTime @default(now())
}

model CalonPengantin {
  id                 Int      @id @default(autoincrement())
  nama               String
  nik                String   @unique
  tanggalLahir       DateTime
  umur               Int
  tanggalPernikahan  DateTime
  periksaKesehatan   Boolean
  bimbinganPerkawinan Boolean
  createdAt          DateTime @default(now())
}

model RemajaPutri {
  id            Int      @id @default(autoincrement())
  nama          String
  nik           String   @unique
  tanggalLahir  DateTime
  umur          Int
  ttd           Boolean
  anemia        Boolean
  hasilAnemia   Boolean
  createdAt     DateTime @default(now())
}

model IbuHamil {
  id                   Int      @id @default(autoincrement())
  nama                 String
  nik                  String   @unique
  tanggalLahir         DateTime
  umur                 Int
  hariPertamaHaid      DateTime
  tanggalPerkiraanLahir DateTime
  umurKehamilan        Int
  periksaKehamilan     String
  statusGizi           Boolean
  statusPeriksaLengkap Boolean
  minumTtd             Boolean
  kpPascaBersalin      Boolean
  tambahanGizi         Boolean
  createdAt            DateTime @default(now())
}

model dataAnak {
  id                Int      @id @default(autoincrement())
  nama              String
  nik               String   @unique
  tanggalLahir      DateTime
  umur              Int
  jenisKelamin      JenisKelamin
  namaOrangTua      String
  statusGiziKurang  Boolean
  statusGiziBuruk   Boolean
  stunting          Boolean
  imunisasiHbO      Boolean
  imunisasiBcgPolio1 Boolean
  statusKelengkapan Boolean
  createdAt         DateTime @default(now())
}

model Keluarga {
  id                    Int      @id @default(autoincrement())
  namaKepalaKeluarga    String
  dusun                 String
  namaIbuHamil          String
  anak_0_59_bulan       Int
  kategoriKeluargaRentan Boolean
  kartuKeluarga         Boolean
  jambanSehat           Boolean
  sumberAirBersih       Boolean
  jaminanSosial         Boolean
  jaminanKesehatan      Boolean
  aksesSanitasi         Boolean
  pendampinganKeluarga  Boolean
  ketahananPangan       Boolean
  createdAt             DateTime @default(now())
}

// Enum for gender in Anak model
enum JenisKelamin {
  LAKI_LAKI
  PEREMPUAN
}
